<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:pro="http://www.liquibase.org/xml/ns/pro"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
    <changeSet id="1" author="diego">
        <createTable tableName="category_event">
            <column name="aggregate_id" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="aggregate_version" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="data" type="jsonb">
                <constraints nullable="false" />
            </column>
            <column name="created_at" type="timestamptz">
                <constraints nullable="false" />
            </column>
            <column name="published" type="boolean">
                <constraints nullable="false" />
            </column>
        </createTable>
        <addPrimaryKey tableName="category_event" columnNames="aggregate_id,aggregate_version" />
    </changeSet>

    <changeSet id="2" author="diego">
        <createTable tableName="post_event">
            <column name="aggregate_id" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="aggregate_version" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="data" type="jsonb">
                <constraints nullable="false" />
            </column>
            <column name="created_at" type="timestamptz">
                <constraints nullable="false" />
            </column>
            <column name="published" type="boolean">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>